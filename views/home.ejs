<%- include('partials/header.ejs') %>
<body class="bg-gray-100">
    <!-- Navigation Bar -->
    

    <!-- Carousel Section -->
    <div class="max-w-8xl mx-auto px-4 sm:px-6 lg:px-8 py-12" x-data="{ activeSlide: 0 }">
        <div class="relative rounded-xl overflow-hidden shadow-xl">
            <!-- Carousel Container -->
            <div class="relative h-[500px]">
                <!-- Slide 1 -->
                <div class="absolute inset-0 transition-opacity duration-500"
                     x-show="activeSlide === 0"
                     x-transition:enter="transition ease-out duration-300"
                     x-transition:enter-start="opacity-0"
                     x-transition:enter-end="opacity-100">
                    <div class="absolute inset-0 bg-gradient-to-r from-purple-600 to-indigo-600 opacity-90"></div>
                    <img src="/api/placeholder/1200/400" alt="Quiz 1" class="w-full h-full object-cover">
                    <div class="absolute inset-0 flex items-center justify-center text-white">
                        <div class="text-center">
                            <h2 class="text-4xl font-bold mb-4">Test Your Knowledge</h2>
                            <p class="text-xl mb-8">Join thousands of quiz enthusiasts</p>
                            <a href="/form">
                            <button class="bg-white text-indigo-600 px-6 py-3 rounded-lg font-semibold hover:bg-indigo-50" onclick=>
                                Start Quiz Now
                            </button></a>
                        </div>
                    </div>
                </div>

                <!-- Slide 2 -->
                <div class="absolute inset-0 transition-opacity duration-500"
                     x-show="activeSlide === 1"
                     x-transition:enter="transition ease-out duration-300"
                     x-transition:enter-start="opacity-0"
                     x-transition:enter-end="opacity-100">
                    <div class="absolute inset-0 bg-gradient-to-r from-blue-600 to-teal-600 opacity-90"></div>
                    <img src="/api/placeholder/1200/400" alt="Quiz 2" class="w-full h-full object-cover">
                    <div class="absolute inset-0 flex items-center justify-center text-white">
                        <div class="text-center">
                            <h2 class="text-4xl font-bold mb-4">Daily Challenges</h2>
                            <p class="text-xl mb-8">Compete with players worldwide</p>
                        </div>
                    </div>
                </div>

                <!-- Slide 3 -->
                <div class="absolute inset-0 transition-opacity duration-500"
                     x-show="activeSlide === 2"
                     x-transition:enter="transition ease-out duration-300"
                     x-transition:enter-start="opacity-0"
                     x-transition:enter-end="opacity-100">
                    <div class="absolute inset-0 bg-gradient-to-r from-green-600 to-emerald-600 opacity-90"></div>
                    <img src="/api/placeholder/1200/400" alt="Quiz 3" class="w-full h-full object-cover">
                    <div class="absolute inset-0 flex items-center justify-center text-white">
                        <div class="text-center">
                            <h2 class="text-4xl font-bold mb-4">Create Your Own Quiz</h2>
                            <p class="text-xl mb-8">Share with friends and community</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Carousel Controls -->
            <div class="absolute bottom-4 left-0 right-0">
                <div class="flex items-center justify-center space-x-2">
                    <button class="w-3 h-3 rounded-full bg-white opacity-50 hover:opacity-100 transition-opacity duration-300"
                            :class="{ 'opacity-100': activeSlide === 0 }"
                            @click="activeSlide = 0"></button>
                    <button class="w-3 h-3 rounded-full bg-white opacity-50 hover:opacity-100 transition-opacity duration-300"
                            :class="{ 'opacity-100': activeSlide === 1 }"
                            @click="activeSlide = 1"></button>
                    <button class="w-3 h-3 rounded-full bg-white opacity-50 hover:opacity-100 transition-opacity duration-300"
                            :class="{ 'opacity-100': activeSlide === 2 }"
                            @click="activeSlide = 2"></button>
                </div>
            </div>

            <!-- Arrow Controls -->
            <button class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-white/30 hover:bg-white/50 rounded-full p-2 text-white"
                    @click="activeSlide = activeSlide === 0 ? 2 : activeSlide - 1">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </button>
            <button class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-white/30 hover:bg-white/50 rounded-full p-2 text-white"
                    @click="activeSlide = activeSlide === 2 ? 0 : activeSlide + 1">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
            </button>
        </div>
    </div>

    <!-- Auto-advance carousel -->
    <script>
        setInterval(() => {
            const carousel = document.querySelector('[x-data]').__x.$data;
            carousel.activeSlide = (carousel.activeSlide + 1) % 3;
        }, 5000);
    </script>
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
</body>


<%- include('partials/footer.ejs') %>